<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_radius_white_bg"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:includeFontPadding="false"
        android:text="N/A"
        android:textColor="@color/black_333333"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@id/tv_rssi"
        app:layout_constraintRight_toLeftOf="@id/tv_connect"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_mac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:includeFontPadding="false"
        android:text="MAC:AA:BB:CC:DD:EE:FF"
        android:textColor="@color/grey_808080"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <TextView
        android:id="@+id/tv_rssi"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_adv_rssi"
        android:drawablePadding="5dp"
        android:gravity="center_horizontal"
        android:text="N/A"
        android:textColor="@color/grey_808080"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_mac"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_name" />

    <TextView
        android:id="@+id/tv_connect"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_btn_bg_pro"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="CONNECT"
        android:textColor="@color/white_ffffff"
        app:layout_constraintBottom_toBottomOf="@id/tv_mac"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_name" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="13dp"
        android:gravity="center_vertical"
        android:text="ON"
        android:textColor="@color/black_333333"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_rssi" />

    <TextView
        android:id="@+id/tv_tx_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="13dp"
        android:gravity="center_vertical"
        android:text="Tx Power:N/A"
        android:textColor="@color/black_333333"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="@id/tv_connect"
        app:layout_constraintTop_toBottomOf="@id/tv_rssi" />

    <TextView
        android:id="@+id/tv_voltage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:drawableLeft="@drawable/ic_adv_voltage"
        android:drawablePadding="5dp"
        android:text="X.X V"
        android:textColor="@color/black_333333"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_status"
        app:layout_constraintTop_toBottomOf="@id/tv_status" />

    <TextView
        android:id="@+id/tv_current"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_adv_current"
        android:drawablePadding="5dp"
        android:singleLine="true"
        android:text="X A"
        android:textColor="@color/black_333333"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_voltage"
        app:layout_constraintLeft_toLeftOf="@id/tv_status"
        app:layout_constraintRight_toRightOf="@id/tv_connect" />

    <TextView
        android:id="@+id/tv_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_adv_power"
        android:drawablePadding="5dp"
        android:text="X.X W"
        android:textColor="@color/black_333333"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_voltage"
        app:layout_constraintLeft_toLeftOf="@id/tv_energy" />

    <TextView
        android:id="@+id/tv_power_factor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:drawableLeft="@drawable/ic_adv_power_factor"
        android:drawablePadding="5dp"
        android:text="X %"
        android:textColor="@color/black_333333"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_status"
        app:layout_constraintTop_toBottomOf="@id/tv_voltage" />

    <TextView
        android:id="@+id/tv_energy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:drawableLeft="@drawable/ic_adv_energy"
        android:drawablePadding="5dp"
        android:text="XXKWh"
        android:textColor="@color/black_333333"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_connect"
        app:layout_constraintTop_toBottomOf="@id/tv_power" />

    <TextView
        android:id="@+id/tv_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:drawableLeft="@drawable/ic_adv_frequency"
        android:drawablePadding="5dp"
        android:text="X HZ"
        android:textColor="@color/black_333333"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/tv_current"
        app:layout_constraintTop_toBottomOf="@id/tv_current" />
</androidx.constraintlayout.widget.ConstraintLayout>