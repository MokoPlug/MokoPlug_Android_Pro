<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@color/blue_2681ff">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="back"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Indicator  Setting"
            android:textColor="@color/white_ffffff"
            android:textSize="18sp" />


        <View
            style="@style/divider_line"
            android:layout_alignParentBottom="true"
            android:background="@color/grey_999999" />
    </RelativeLayout>

    <RadioGroup
        android:id="@+id/rg_ble_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_solid_blue"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:button="@null"
            android:drawableRight="@drawable/radiobtn_conn"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="Solid blue"
            android:textColor="@color/black_333333"
            android:textSize="15sp" />

        <View style="@style/divider_line" />

        <RadioButton
            android:id="@+id/rb_solid_blue_5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:button="@null"
            android:drawableRight="@drawable/radiobtn_conn"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="Solid blue for 5 seconds"
            android:textColor="@color/black_333333"
            android:textSize="15sp" />

        <View style="@style/divider_line" />

        <RadioButton
            android:id="@+id/rb_off"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:button="@null"
            android:drawableRight="@drawable/radiobtn_conn"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="OFF"
            android:textColor="@color/black_333333"
            android:textSize="15sp" />

        <View style="@style/divider_line" />
    </RadioGroup>
</LinearLayout>
